<html>
  <head>
    <title>CBF</title>
    <meta charset="UTF-8">
	<link href="/estilos.css" type="text/css" rel="stylesheet">
  </head>
  <body>
    <h1>Lista de Clubes</h1>
	<hr>
	
	<%- include('../menu.html'); %>
	

	<form action="/formClube" method="post">
		<input type="submit" name="acao" value="Inserir">&nbsp;
		<input type="submit" name="acao" value="Atualizar">&nbsp;
		<input type="submit" name="acao" value="Excluir"><br><br>
		
		<table border="1" bordercolor="#000000" cellpadding="0" cellspacing="0">
		  <tr>
			<th>Seleção</th>
			<th>Id</th>
			<th>Nome</th>
			<th>Sigla</th>
			<th>Ano de Fundação</th>
			<th>Cidade</th>
			<th>Estado</th>
		  </tr>
		  <% clubes.forEach((club, index) => { %>
			   <tr>
				 <td> 
					<input type="radio" name="id" id="id" value="<%= club.id %>">
				 </td>
				 <td><%= club.id %></td>
				 <td><%= club.nome %></td>
				 <td><%= club.sigla %></td>
				 <td><%= club.ano_fundacao %></td>
				 <td><%= club.cidade %></td>
				 <td><%= club.estado %></td>
			   </tr>
		  <% }) %>
		</table>

	</form>
	
    <a href="/">Voltar para Página Inicial</a> &nbsp;

  </body>
</html>